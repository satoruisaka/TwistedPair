# twistedpair.config.yaml
model:
  name: "your-llm"
  max_output_tokens: 512
  temperature_bounds: {min: 0.05, max: 1.0}

capture:
  source: "screenpipe"
  debounce_ms: 800
  min_chars: 80
  dedupe_threshold: 0.9

routing:
  mode: "ensemble"  # "single" | "ensemble"
  presets:
    - {mode: "invert_er", tone: "satirical", gain: 4}
    - {mode: "so_what_er", tone: "neutral", gain: 3}
    - {mode: "echo_er", tone: "poetic", gain: 5}
    - {mode: "what_if_er", tone: "primal", gain: 6}
    - {mode: "cucumb_er", tone: "technical", gain: 2}
    - {mode: "archiv_er", tone: "technical", gain: 3}

storage:
  out_dir: "./runs"
  write_html_index: true
  include_metadata: true

